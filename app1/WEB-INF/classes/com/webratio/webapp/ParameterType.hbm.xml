    <id name="target_oid" column="`oid`" type="java.lang.Integer"/>
    <property name="source_oid" column="`parametertype_oid`" type="java.lang.Integer" unique="false" optimistic-lock="true" lazy="false" generated="never"/>
  </class>
  <!-- mapping for relationship 'process[parameterType2Process]' -->
  <class entity-name="com.webratio.webapp.Rel_ParameterType_to_process" table="`parametertype`" dynamic-update="true" dynamic-insert="true" mutable="true" polymorphism="implicit" select-before-update="false" optimistic-lock="version">
    <id name="source_oid" column="`oid`" type="java.lang.Integer"/>
    <property name="target_oid" column="`process_oid`" type="java.lang.Integer" unique="false" optimistic-lock="true" lazy="false" generated="never"/>
  </class>
</hibernate-mapping>
